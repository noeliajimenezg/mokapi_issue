{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Docker Containers",
			"type": "shell",
			"command": "docker-compose",
			"args": ["up", "-d"],
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Stop Docker Containers",
			"type": "shell",
			"command": "docker-compose",
			"args": ["down"],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "View Docker Container Logs",
			"type": "shell",
			"command": "docker-compose",
			"args": ["logs", "-f"],
			"group": "build",
			"problemMatcher": [],
			"isBackground": true
		},
		{
			"label": "Maven Clean Compile",
			"type": "shell",
			"command": "mvn",
			"args": ["clean", "compile"],
			"group": "build",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "Spring Boot Run",
			"type": "shell",
			"command": "mvn",
			"args": ["spring-boot:run"],
			"group": "build",
			"problemMatcher": [],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Setup and Run Application",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Start Docker Containers",
				"Spring Boot Run"
			],
			"group": "build",
			"problemMatcher": []
		}
	]
}